{
  "name": "backend",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:delete": "rm -rf .wrangler/state/v3/d1/",
    "db:reset": "bun db:delete && wrangler d1 export $DB_NAME --output backup.sql --remote --no-schema && pnpm run db:migrate && wrangler d1 execute $DB_NAME --local --file=backup.sql && rm backup.sql",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:migrate:production": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "chanfana": "^2.0.2",
    "zod": "^3.23.8",
    "hono": "^4.4.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250303.0",
    "@types/node": "20.8.3",
    "@types/service-worker-mock": "^2.0.1",
    "wrangler": "^3.112.0"
  }
}
